<div class="main actor-index">
  <div class="container">
    <div class="row">

      <!--
      To do: Loop through actors and display each one with this HTML
      <div class="actor col-xs-2">
        actor image goes here
        <h3> actor name goes here </h3>
        <p> actor bio goes here </p>
      </div>
      -->
      <% @actors.each do |a| %>
        <div class="actor col-xs-2">
          <%= image_tag a.image %>
          <h3> <%= a.first_name %> <%= a.last_name %> </h3>
          <%= link_to "Learn more", actor_path(a) %>
        </div>
      <% end %>

    </div>
  </div>
</div>